<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Workspaces\Domain\Entity\Workspace"
            table="workspaces_workspace"
            repository-class="App\Workspaces\Infrastructure\Repository\WorkspaceRepository"
    >
        <id name="id" type="string" length="26">
            <generator strategy="NONE"/>
        </id>

        <one-to-many
            field="channels"
            target-entity="App\Channels\Domain\Entity\Channel"
            mapped-by="channels"
        />

        <field name="name" column="name" type="string" length="300" unique="true"/>
        <field name="membersCount" column="members_count" type="smallint"/>

        <field name="createdAt" column="created_at" type="date_immutable"/>
        <field name="updatedAt" column="updated_at" type="date_immutable" nullable="true"/>
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="setCreatedAt"/>
        </lifecycle-callbacks>
        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="setUpdatedAt"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
